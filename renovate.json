{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "Microsoft.CodeAnalysis.CSharp",
                "Microsoft.CodeAnalysis.Analyzers",
                "Microsoft.CodeAnalysis.CSharp.Workspaces"
            ],
            "enabled": false
        },
        {
            "matchManagers": [
                "nuget"
            ],
            "groupName": "AWS SDK Updates",
            "matchPackageNames": [
                "/^AWSSDK\\./"
            ]
        },
        {
            "matchManagers": [
                "nuget"
            ],
            "groupName": ".NET Updates",
            "matchPackageNames": [
                "/^Microsoft\\./",
                "/^System\\./",
                "/^DotNet\\./",
                "!Microsoft.CodeAnalysis.CSharp",
                "!Microsoft.CodeAnalysis.Analyzers",
                "!Microsoft.CodeAnalysis.CSharp.Workspaces"
            ]
        },
        {
            "matchManagers": [
                "nuget"
            ],
            "groupName": "Dependencies Updates",
            "matchPackageNames": [
                "!/^AWSSDK\\./",
                "!/^Microsoft\\./",
                "!/^System\\./",
                "!/^DotNet\\./",
                "!/^Goa\\./",
                "!Microsoft.CodeAnalysis.CSharp",
                "!Microsoft.CodeAnalysis.Analyzers",
                "!Microsoft.CodeAnalysis.CSharp.Workspaces"
            ]
        }
    ]
}
